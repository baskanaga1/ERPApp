<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
<ScrollView
    android:layout_width="fill_parent"
    android:id="@+id/scrollview"
    android:layout_marginBottom="10dp"
    android:layout_below="@+id/actionbar"
    android:layout_above="@+id/footer"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="3dp">
            <com.guruinfo.scm.common.ui.TextViewPlus
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="External Minor"
                android:textColor="#5E5E5E"
                android:textSize="16sp" />
            <com.guruinfo.scm.common.ui.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="-"
                android:textColor="#5E5E5E"
                android:textSize="16sp" />
            <com.guruinfo.scm.common.ui.TextViewPlus
                android:id="@+id/subcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garder Issue"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/type_spin"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spin_height"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lead_dropdown_bg" />
            <LinearLayout
                android:id="@+id/unit_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <Spinner
                    android:id="@+id/unitid"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/spin_height"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lead_dropdown_bg" />
            </LinearLayout>
            <EditText
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:padding="5dp"
                android:background="@drawable/border"
                android:hint="Description *"
                android:inputType="textMultiLine" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <com.guruinfo.scm.common.ui.SCMTextView
                    android:id="@+id/activitydetailtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATTACHMENTS"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/border"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/selected1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/browse"
                        android:layout_weight="1.8"
                        android:lines="1"
                        android:text=" No file chosen"
                        android:textColor="#595959"
                        android:textSize="@dimen/head_text"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/browse1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.2"
                        android:background="@drawable/ic_ticketing_attachicon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/border"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/selected2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/add_ticket_selected2"
                        android:layout_weight="1.8"
                        android:lines="1"
                        android:text=" No file chosen"
                        android:textColor="#595959"
                        android:textSize="@dimen/head_text"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/browse2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/ic_ticketing_attachicon" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/border"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/selected3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/add_ticket_selected3"
                        android:layout_weight="1.8"
                        android:lines="1"
                        android:text=" No file chosen"
                        android:textColor="#595959"
                        android:textSize="@dimen/head_text"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/browse3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.2"
                        android:background="@drawable/ic_ticketing_attachicon" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/add_row_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button1_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="Add"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/remove_row_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button1_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="Remove"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>
                <TableLayout
                    android:id="@+id/table_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/table_marging"
                    android:background="@drawable/shadow"
                    android:padding="5dp"
                    android:visibility="gone"></TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <include
        android:id="@+id/footer"
        layout="@layout/new_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>