<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorPrimary"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp">
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/searchTicketIcon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/calendar_icon" />
        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/onMenubtn"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add" />
        <ImageView
            android:id="@+id/searchTicketIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/addIcon"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_icon" />
        <ImageView
            android:id="@+id/onMenubtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onHome"
            android:visibility="visible"
            android:src="@drawable/ic_action_home" />
        <TextView
            android:id="@+id/onBackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_back"
            android:drawableRight="@drawable/ic_amarprakash_icon"
            android:onClick="onBack" />
        <RelativeLayout
            android:id="@+id/lefttxts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/onBackbtn">
            <EditText
                android:id="@+id/dateSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:padding="10dp"
                android:visibility="gone"
                android:editable="false"
                android:background="@drawable/scm_date_picker_red_bg"/>
            <com.guruinfo.scm.common.ui.SCMTextView
                android:id="@+id/headerTitle"
                style="@style/black_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:ellipsize="end"
                android:singleLine="true"
                app:fontType="medium" />
            <com.guruinfo.scm.common.ui.SCMTextView
                android:id="@+id/Notifheader"
                style="@style/white_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/headerTitle"
                android:visibility="gone"
                app:fontType="medium" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>